<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/bg_main">

    <ImageView
        android:id="@+id/img_seb7a_body"
        android:layout_width="0dp"
        android:layout_height="229dp"
        android:layout_marginTop="204dp"
        android:adjustViewBounds="true"
        android:src="@drawable/seb7a_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/tasbeeh_count"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_seb7a_body" />

    <TextView
        android:id="@+id/sebha_duaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/sebha_doaa_shape"
        android:gravity="center"
        android:padding="8dp"
        android:text="سبحان الله"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sebha_counter"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_seb7a_head"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="152dp"
        android:adjustViewBounds="true"
        android:src="@drawable/seb7a_head"
        app:layout_constraintBottom_toTopOf="@+id/img_seb7a_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/tv_sebha_counter"
        android:layout_width="86dp"
        android:layout_height="78dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/sebha_counter_shape"
        android:gravity="center"
        android:padding="8dp"
        android:text="0"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_seb7a_body" />


</androidx.constraintlayout.widget.ConstraintLayout>